<resources>

	<style name="Theme.Jakartans" parent="Theme.Sherlock.Light.DarkActionBar">
		<item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		<item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
	</style>	
	<!-- "Implementation" of our ABS custom theme -->
	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
		<item name="background">@color/orange</item>
		<item name="android:background">@color/orange</item>
		<item name="titleTextStyle">@style/Jak.ActionBar.TitleTextStyle</item>
		<item name="android:titleTextStyle">@style/Jak.ActionBar.TitleTextStyle</item>
		<item name="subtitleTextStyle">@style/Jak.ActionBar.SubtitleTextStyle</item>
		<item name="android:subtitleTextStyle">@style/Jak.ActionBar.SubtitleTextStyle</item>
	</style>

	<style name="Jak.ActionBar.SubtitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Subtitle">
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="Jak.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

</resources>
