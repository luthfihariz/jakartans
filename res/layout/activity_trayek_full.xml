<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trayek_full"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.jakartans.activities.TrayekFullActivity">
    
	<LinearLayout 
	    android:id="@+id/ll_trayek_full_line_1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:orientation="horizontal">
		
	    <ImageView 
	        android:id="@+id/iv_trayek"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_gravity="center"
		    android:contentDescription="@string/hello_world"
		    android:src="@drawable/ic_big_bus"/>
	    
	    <TextView 
	        android:id="@+id/tv_username"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="7dp"
		    android:textSize="18sp"
		    android:textStyle="bold"
		    android:layout_gravity="center_vertical"
		   />
	       
	</LinearLayout>
	
	<TextView 
        android:id="@+id/tv_status"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="3dp"
	    android:text="@string/rute_trayek"/>
	
		
    <LinearLayout
        android:id="@+id/ll_line_2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	       
        <ImageView 
	        android:id="@+id/iv_jam"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_margin="3dp"
		    android:contentDescription="@string/hello_world"
		    android:src="@drawable/ic_road_conditions_green"/>
        
        <TextView 
	        android:id="@+id/tv_name_jam"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="3dp"
		    android:layout_gravity="center_vertical"
		    android:text="@string/fluent"/>
    
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/ll_line_3"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	       
        <ImageView 
	        android:id="@+id/iv_bus"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_margin="3dp"
		    android:contentDescription="@string/hello_world"
		    android:src="@drawable/ic_passenger_density_yellow"/>
        
        <TextView 
	        android:id="@+id/tv_name_bus"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="3dp"
		    android:layout_gravity="center_vertical"
		    android:text="@string/fluent"/>
    
	</LinearLayout>	
	
	<LinearLayout
        android:id="@+id/ll_line_4"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	       
        <ImageView 
	        android:id="@+id/iv_avail"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_margin="3dp"
		    android:contentDescription="@string/hello_world"
		    android:src="@drawable/ic_vehicle_availability_red"/>
        
        <TextView 
	        android:id="@+id/tv_name_avail"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="3dp"
		    android:layout_gravity="center_vertical"
		    android:text="@string/fluent"/>
    
	</LinearLayout>
			
    <ListView 
        android:id="@+id/lv_status"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
    
</LinearLayout>

