<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/trayek_full"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	tools:context="com.jakartans.activities.TrayekFullActivity" >

	<LinearLayout
		android:id="@+id/ll_trayek_full_line_1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="3dp"
		android:padding="10dp"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/iv_trayek"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_gravity="center"
			android:contentDescription="@string/hello_world"
			android:src="@drawable/ic_big_bus" />

		<TextView
			android:id="@+id/tv_username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="7dp"
			android:textSize="18sp"
			android:textStyle="bold" />
	</LinearLayout>

	<TextView
		android:id="@+id/tv_status"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:layout_margin="3dp"
		android:text="@string/rute_trayek" />

	<LinearLayout
		android:id="@+id/ll_line_2"
		android:layout_width="fill_parent"
		android:padding="5dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/iv_jam"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_margin="3dp"
			android:contentDescription="@string/hello_world"
			android:src="@drawable/ic_road_conditions_green" />

		<TextView
			android:id="@+id/tv_name_jam"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="3dp"
			android:text="@string/fluent" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_line_3"
		android:layout_width="fill_parent"
		android:padding="5dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/iv_bus"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_margin="3dp"
			android:contentDescription="@string/hello_world"
			android:src="@drawable/ic_passenger_density_yellow" />

		<TextView
			android:id="@+id/tv_name_bus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="3dp"
			android:text="@string/fluent" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_line_4"
		android:layout_width="fill_parent"
		android:padding="5dp"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/iv_avail"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_margin="3dp"
			android:contentDescription="@string/hello_world"
			android:src="@drawable/ic_vehicle_availability_red" />

		<TextView
			android:id="@+id/tv_name_avail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_margin="3dp"
			android:text="@string/fluent" />
	</LinearLayout>

	<TextView
		android:id="@+id/textView1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="#555"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:padding="7dp"
		android:textColor="#fff"
		android:text="STATUS" />

	<ListView
		android:id="@+id/lv_status"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

</LinearLayout>