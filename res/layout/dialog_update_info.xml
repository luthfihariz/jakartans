<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.jakartans.activities.SearchActivity" >
    
    <EditText 
        android:id="@+id/et_name_trayek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/name_trayek"/>
    
    <TextView 
        android:id="@+id/tv_jamming"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/jamming"
        android:hint="@string/jamming"/>
    
    <SeekBar 
        android:id="@+id/seek_jamming"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="3"
        android:secondaryProgress="1"/>
    
    <TextView 
        android:id="@+id/tv_fluent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fluent"
        android:hint="@string/jamming"/>
    
    <SeekBar 
        android:id="@+id/seek_fluent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="3"
        android:secondaryProgress="1"/>
    
    <TextView 
        android:id="@+id/tv_availability"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/availability"
        android:hint="@string/jamming"/>
    
    <SeekBar 
        android:id="@+id/seek_availability"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="3"
        android:secondaryProgress="1"/>
    
    <EditText 
        android:id="@+id/et_update_info"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/update_status"/>

</LinearLayout>
